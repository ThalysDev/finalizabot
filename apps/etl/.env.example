DATABASE_URL="postgresql://user:pass@localhost:5432/sofascore_etl"

# Required by Prisma when using directUrl in schema (migrations). Local/CI: use same value as DATABASE_URL if not using Neon.
# For Neon: use Pooled in DATABASE_URL; use Direct connection string here (dashboard, without -pooler in host).
# On Vercel with Neon plugin: DATABASE_URL and DATABASE_URL_UNPOOLED are injected automatically — no need to set.
DATABASE_URL_UNPOOLED="postgresql://user:pass@localhost:5432/sofascore_etl"

# Optional. Comma-separated match IDs to ingest. Alternative: put one ID per line in src/seed/matches.txt
# MATCH_IDS="12345,67890"

# Optional. Tournament names to ingest. Default = main European leagues (Premier, LaLiga, Serie A, Bundesliga, Ligue 1, UCL, UEL).
# ALLOWED_TOURNAMENT_NAMES="Premier League,LaLiga,Serie A,Bundesliga,Ligue 1,UEFA Champions League,UEFA Europa League"

# Optional. Tournament IDs used when discovering matches (no MATCH_IDS nor matches.txt). Default = European main leagues.
# SYNC_TOURNAMENT_IDS="17,8,23,35,34,7,679"

# Optional. Timezone for "today" and "tomorrow" in discovery (default UTC). Example: America/Sao_Paulo
# SYNC_TZ="UTC"

# Optional. Day offsets for discovery: 0=today, 1=tomorrow (default "0,1"). Comma-separated.
# SYNC_DAYS="0,1"

# Optional. Phase 2: ingest finished matches from the last N days for player history (last-matches). Default 60.
# SYNC_LAST_DAYS=60

# Optional. Override Phase 2 days without changing SYNC_LAST_DAYS (balanced local runs).
# SYNC_PHASE2_DAYS=30
# SYNC_PHASE2_SKIP_EXISTING=true

# Optional. Local performance tuning (all optional; defaults preserve current behavior).
# SYNC_DELAY_SCALE=1
# SYNC_DELAY_SHORT_MIN_MS=200
# SYNC_DELAY_SHORT_MAX_MS=600
# SYNC_DELAY_API_MIN_MS=300
# SYNC_DELAY_API_MAX_MS=1000
# DISCOVERY_DELAY_SCALE=1
# DISCOVERY_DELAY_MIN_MS=600
# DISCOVERY_DELAY_MAX_MS=2000
# CURL_JITTER_SCALE=1
# CURL_JITTER_MIN_MS=300
# CURL_JITTER_MAX_MS=1000
# CURL_TIMEOUT_SECONDS=25
# CURL_MAX_ATTEMPTS=6
# LINEUPS_BATCH_SIZE=20

# ⚠️  CRÍTICO: Desabilitar image sync (APENAS para desenvolvimento/testes rápidos)
# Quando ativado, escudos e fotos NÃO serão baixados — front-end pode não carregar imagens!
# Recomendado: sempre FALSE em produção
# SKIP_IMAGE_SYNC=true

# Configurar concorrência de download de imagens (padrão: 5)
# Valores maiores = mais rápido, mas pode sobrecarregar proxies/network
# Recomendado: 5-10 para desenvolvimento, 3-5 para produção
# IMAGE_DOWNLOAD_CONCURRENCY=5

# Optional. Limit bridge sync to recent matches (days). Applies to matches, players and stats.
# BRIDGE_MATCH_DAYS=30

# Optional. API server port (default 3000). Enable CORS for browser clients.
# PORT=3000
# CORS=true

# Optional. API key for authenticating requests from the web app.
# Must match SOFASCORE_ETL_API_KEY in the web .env.
# SOFASCORE_ETL_API_KEY=your_random_key_here

# Optional. Run mode: "server" (default) | "ingest" (one-shot sync then exit).
# MODE=server

# Optional. Proxy configuration for SofaScore requests.
# SOFASCORE_PROXY_URL=http://proxy:port
# SOFASCORE_PROXY_LIST_PATH=./proxies.txt
# SOFASCORE_PROXY_LIST_URL=https://example.com/proxies.txt
