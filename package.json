{
  "name": "finalizabot-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm -w @finalizabot/web run dev",
    "dev:etl": "npm -w @finalizabot/etl run api:dev",
    "build": "npm -w @finalizabot/shared run build && npm -w @finalizabot/web run build",
    "build:shared": "npm -w @finalizabot/shared run build",
    "build:web": "npm -w @finalizabot/web run build",
    "build:etl": "npm -w @finalizabot/etl run build",
    "sync": "npm -w @finalizabot/etl run sync",
    "sync:bridge": "npm -w @finalizabot/etl run bridge",
    "sync:full": "npm -w @finalizabot/etl run sync:full",
    "lint": "npm -w @finalizabot/web run lint",
    "db:generate": "npm -w @finalizabot/shared run generate",
    "db:push": "npm -w @finalizabot/shared run db:push",
    "db:migrate": "npm -w @finalizabot/shared run db:migrate",
    "db:seed": "npm -w @finalizabot/shared run db:seed",
    "db:studio": "npm -w @finalizabot/shared run db:studio",
    "postinstall": "npm -w @finalizabot/shared run generate"
  },
  "engines": {
    "node": ">=20"
  }
}
